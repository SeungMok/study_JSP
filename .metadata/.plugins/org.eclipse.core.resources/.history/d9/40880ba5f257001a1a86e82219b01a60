  <!-- 특정servlet에서 초기화 할때  web.xml 수정하여 사용하는 모습 (ServletInitParam)
  <servlet>
  	
  	<servlet-name>ServletInitParam</servlet-name>
  	<servlet-class>com.java.ex.ServletInitParam</servlet-class>
  	
	<init-param>
  		<param-name>id</param-name>
  		<param-value>ddsvsd</param-value>
  	</init-param>
  	<init-param>
  		<param-name>pw</param-name>
  		<param-value>1234</param-value>
  	</init-param>
  	<init-param>
  		<param-name>path</param-name>
  		<param-value>C:\\바탕화면\\workspace</param-value>
  	</init-param>	
  
  </servlet>
  <servlet-mapping>
  	<servlet-name>ServletInitParam</servlet-name>
  	<url-pattern>/InitParam</url-pattern>
  </servlet-mapping>
   -->
   
 	<!-- 여러 servlet에서 특정 데이터를 공유해야 될 경우.(ContextInitParam)
	<context-param>
  		<param-name>id</param-name>
  		<param-value>ddsvsd</param-value>
  	</context-param>
  	<context-param>
  		<param-name>pw</param-name>
  		<param-value>1234</param-value>
  	</context-param>
  	<context-param>
  		<param-name>path</param-name>
  		<param-value>C:\\바탕화면\\workspace</param-value>
  	</context-param>	
  	 -->
  	 
  	<!-- 어플리케이션 감시 Listener web.xml에서 직접입력하는 방법 (ServletListener)
	<listener>
		<listener-class>com.java.ex.ServletListener</listener-class>
	</listener>
	 -->
	 
